  <body class="text-center">   
    
    <main class="form-signin">
      <form method="post" action="/user/change_pass/<%= userId %>">
        
        <input type="hidden" name="_method" value="PUT">

        <img class="mb-4 pr-2" src="" width="200" height="200">
        
        <div class="header1"id="bajar">
        
            <h2><b>Actualizar contraseña</b></h2>
    
        </div>

        <input name="id" type="hidden"  value="<%= userId %>" class="form-control" />

        <div class="form-floating">
          <input type="password" name='password1' class="form-control" id="floatingInput" placeholder="Contraseña">
          <label for="floatingInput">Nueva contraseña</label>
        </div>
        <div class="form-floating">
          <input type="password" name='password2'  class="form-control" id="floatingPassword" placeholder="Contraseña">
          <label for="floatingPassword">Nueva contraseña otra vez</label>
        </div>

        <button class="w-100 btn btn-lg btn-primary" type="submit">Actualizar Contraseña</button>

      </form>
    </main>

  </body>
